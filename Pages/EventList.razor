@page "/"
@using EventEaseApp.Models

<h2>Upcoming Events</h2>

@foreach (var ev in Events)
{
    <EventCard Event="ev" />
    <NavLink class="btn btn-primary" href="@($"/register/{Uri.EscapeDataString(ev.Name)}")">Register</NavLink>
}

@code {
    private List<EventModel> Events = new()
    {
        new EventModel { Name = "Tech Conference 2025", Date = DateTime.Now.AddDays(10), Location = "New York" },
        new EventModel { Name = "Developer Meetup", Date = DateTime.Now.AddDays(20), Location = "San Francisco" },
        new EventModel { Name = "Networking Night", Date = DateTime.Now.AddDays(30), Location = "Chicago" }
    };
}
